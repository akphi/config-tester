{
  "name": "config-tester",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn clean && yarn workspaces foreach --topological-dev --verbose run build",
    "build:ts": "tsc --build",
    "check:copyright": "node ./scripts/copyright/checkCopyrightHeaders.js",
    "check:format": "prettier --check \"scripts/**/*.js\" \"packages/*/src/**/*.{js,ts,tsx,html,scss,css}\"",
    "check:project-ref": "node ./scripts/typescript/checkProjectReferenceConfigs.js",
    "check:typings": "yarn workspaces foreach --topological-dev --verbose run type-check",
    "check:update": "yarn upgrade-interactive",
    "clean": "rimraf \"build\" && yarn workspaces foreach --all --parallel --verbose run clean",
    "commit": "git-cz",
    "dev": "yarn workspace @akphi/app1 dev",
    "dev:ts": "tsc --build --watch",
    "fix": "yarn fix:copyright && yarn fix:lint && yarn fix:format",
    "fix:copyright": "node ./scripts/copyright/checkCopyrightHeaders.js --update",
    "fix:format": "prettier --write \"scripts/**/*.js\" \"packages/*/src/**/*.{js,ts,tsx,html,scss,css}\"",
    "fix:lint": "yarn lint:js --fix && yarn lint:style --fix",
    "lint": "yarn lint:js && yarn lint:style",
    "lint:js": "eslint --cache --cache-location ./build/.eslintcache \"scripts/**/*.{js,ts,tsx}\" \"packages/*/src/**/*.{js,ts,tsx}\"",
    "lint:style": "stylelint --cache --cache-location ./build/.stylelintcache \"packages/*/src/**/*.{scss,css}\"",
    "setup": "yarn && yarn workspaces foreach --topological-dev --verbose run setup --stream",
    "start": "yarn dev",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS --help-url 'Use `yarn commit` or see guide at: https://github.com/akphi/config-tester/blob/master/.github/COMMIT_CONVENTION.md'"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{html,md,mdx}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{scss,css}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "maxHeaderWidth": 72
    }
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@babel/plugin-transform-runtime": "7.12.10",
    "@babel/preset-env": "7.12.11",
    "@babel/preset-react": "7.12.10",
    "@babel/preset-typescript": "7.12.7",
    "@babel/runtime": "7.12.5",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@types/jest": "26.0.19",
    "@types/node": "14.14.20",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@typescript-eslint/eslint-plugin": "4.12.0",
    "@typescript-eslint/parser": "4.12.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "26.6.3",
    "chalk": "4.1.0",
    "commitizen": "4.2.2",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.17.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "jest-extended": "0.11.5",
    "jest-watch-typeahead": "0.6.1",
    "lint-staged": "10.5.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "react-refresh": "0.9.0",
    "rimraf": "3.0.2",
    "rollup": "2.36.0",
    "sort-package-json": "1.48.1",
    "stylelint": "13.8.0",
    "stylelint-config-standard": "20.0.0",
    "typescript": "4.1.3",
    "webpack": "5.11.1",
    "webpack-bundle-analyzer": "4.3.0",
    "webpack-cli": "4.3.1",
    "webpack-dev-server": "4.0.0-beta.0"
  },
  "engines": {
    "node": ">=14.15.0",
    "yarn": ">=1.22.5"
  }
}
